<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header Row -->
    <TextView
        android:id="@+id/widget_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOMENTUM"
        android:textSize="10sp"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:textColor="@color/widget_text_secondary" 
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        
    <TextView
        android:id="@+id/widget_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ 12"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/widget_accent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Content Center -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/widget_streak"
        android:layout_toEndOf="@id/widget_app_name"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/widget_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY'S PLAN"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_secondary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="2dp"/>
            
        <TextView
            android:id="@+id/widget_workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Day A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end"/>
            
        <TextView
            android:id="@+id/widget_workout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 Exercises â€¢ ~45m"
            android:textSize="12sp"
            android:textColor="@color/widget_text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"/>
            
    </LinearLayout>

    <!-- Footer Row -->
    <TextView
        android:id="@+id/widget_weekly_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Day 1/3"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/widget_accent"
        android:paddingVertical="2dp" />

    <TextView
        android:id="@+id/widget_next_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Next: Leg Day"
        android:textSize="10sp"
        android:textColor="@color/widget_text_secondary"
        android:visibility="visible" />

</RelativeLayout>
