<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/background_light">

    <!-- Title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Momentum"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <!-- Activity grid - 5 rows x 6 columns for 30 days -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Row 1 -->
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/day1" style="@style/GridCell"/>
            <TextView android:id="@+id/day2" style="@style/GridCell"/>
            <TextView android:id="@+id/day3" style="@style/GridCell"/>
            <TextView android:id="@+id/day4" style="@style/GridCell"/>
            <TextView android:id="@+id/day5" style="@style/GridCell"/>
            <TextView android:id="@+id/day6" style="@style/GridCell"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/day7" style="@style/GridCell"/>
            <TextView android:id="@+id/day8" style="@style/GridCell"/>
            <TextView android:id="@+id/day9" style="@style/GridCell"/>
            <TextView android:id="@+id/day10" style="@style/GridCell"/>
            <TextView android:id="@+id/day11" style="@style/GridCell"/>
            <TextView android:id="@+id/day12" style="@style/GridCell"/>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/day13" style="@style/GridCell"/>
            <TextView android:id="@+id/day14" style="@style/GridCell"/>
            <TextView android:id="@+id/day15" style="@style/GridCell"/>
            <TextView android:id="@+id/day16" style="@style/GridCell"/>
            <TextView android:id="@+id/day17" style="@style/GridCell"/>
            <TextView android:id="@+id/day18" style="@style/GridCell"/>
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/day19" style="@style/GridCell"/>
            <TextView android:id="@+id/day20" style="@style/GridCell"/>
            <TextView android:id="@+id/day21" style="@style/GridCell"/>
            <TextView android:id="@+id/day22" style="@style/GridCell"/>
            <TextView android:id="@+id/day23" style="@style/GridCell"/>
            <TextView android:id="@+id/day24" style="@style/GridCell"/>
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/day25" style="@style/GridCell"/>
            <TextView android:id="@+id/day26" style="@style/GridCell"/>
            <TextView android:id="@+id/day27" style="@style/GridCell"/>
            <TextView android:id="@+id/day28" style="@style/GridCell"/>
            <TextView android:id="@+id/day29" style="@style/GridCell"/>
            <TextView android:id="@+id/day30" style="@style/GridCell"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Active days count -->
    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 active days"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"/>

</LinearLayout>
